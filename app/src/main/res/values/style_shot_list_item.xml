<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--app:cardBackgroundColor="@android:color/white"-->
    <!--app:cardCornerRadius=""-->
    <!--app:cardElevation=""-->
    <!--app:contentPadding=""-->
    <eat-comment/>

    <style name="slm_card">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">@dimen/cardView_default_corner_radius</item>
        <item name="cardElevation">@dimen/cardView_default_elevation</item>
        <item name="contentPaddingTop">@dimen/content_space_8</item>
        <item name="android:clickable">true</item>
       <!-- <item name="contentPaddingLeft">@dimen/content_space_8</item>
        <item name="contentPaddingRight">@dimen/content_space_8</item>-->
        <item name="android:layout_marginLeft">@dimen/content_space_8</item>
        <item name="android:layout_marginRight">@dimen/content_space_8</item>
    </style>

    <!--TextView-->
    <style name="slm_number">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/official_slate</item>
        <item name="android:textSize">@dimen/material_text_caption2</item>
        <item name="android:drawablePadding">@dimen/content_space_2</item>
    </style>

    <style name="slm_icon">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">@color/official_slate</item>
    </style>

    <style name="slm_username" parent="single_line_text">
        <item name="android:layout_height">@dimen/icon_size_24</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/official_link_blue</item>
        <item name="android:textSize">@dimen/material_text_body2</item>
    </style>

    <style name="slm_type" parent="slm_username">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/selector_pro_badge</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="slm_body">
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:textColor">@color/official_slate</item>
        <item name="android:textSize">@dimen/material_text_body1</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="slm_date" parent="single_line_text">
        <item name="android:textColor">@color/official_slate</item>
        <item name="android:textSize">@dimen/material_text_caption2</item>
    </style>


    <style name="slm_avatar">
        <item name="android:layout_height">@dimen/icon_size_24</item>
        <item name="android:layout_width">@dimen/icon_size_24</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


</resources>