<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/official_slate</item>
        <item name="colorPrimaryDark">@color/official_pink</item>
        <item name="colorAccent">@color/official_pro</item>
        <item name="android:windowBackground">@color/window_background</item>

    </style>

    <style name="Home" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_backdrop</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
