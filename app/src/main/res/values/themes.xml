<resources>

    <!-- Base application theme. -->
    <style name="Yuk" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:textColor">@color/official_charcoal</item>
    </style>

    <style name="Yuk.Home">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Yuk.Splash">
        <item name="android:windowBackground">@drawable/splash_backdrop</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Yuk.Detail">
    </style>
</resources>
