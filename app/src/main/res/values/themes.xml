<resources>

    <!-- Base application theme. -->
    <style name="Yuk" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/official_slate</item>
        <item name="colorPrimaryDark">@color/official_pink</item>
        <item name="colorAccent">@color/official_pro</item>
        <item name="android:windowBackground">@color/window_background</item>

    </style>

    <style name="Yuk.Home">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Yuk.Splash">
        <item name="android:windowBackground">@drawable/splash_backdrop</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Yuk.Detail">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
